<% include ../partials/navbar %>

<% function sameDay(d1, d2) {
  return d1.getFullYear() === d2.getFullYear() &&
  d1.getMonth() === d2.getMonth() &&
  d1.getDate() === d2.getDate()
} %>

<div class="container">
  <br />
  <div class="row">
    <div class="col-md-5">
      <h3><%= foundEvent.name %></h3>
      <p class='mt-3'>Dates:
        <% if (!sameDay(foundEvent.startDate, foundEvent.endDate)) { %>
          <%= `${foundEvent.startDate.toLocaleDateString("en-US")} - ${foundEvent.endDate.toLocaleDateString("en-US")}` %>
        <% } else { %>
          <%= foundEvent.startDate.toLocaleDateString("en-US") %>
        <% } %>
      </p>
    </div>
  </div>
</div>

